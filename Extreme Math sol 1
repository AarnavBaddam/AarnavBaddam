% ---------- Problem ----------
\sect{\color{redink}Problem}
{\color{redink}
A snowball is thrown from 1.5 m off the ground. It's vertical position is $$h(t)=-4.9^2+8t+15$$ (\text{meters, } t\text{ in seconds}).

\\ (a)Find the time when the snowball hits the ground ($h(t)=0$, take the positive root). 
\\ (b) Determine the maximum height and the time it occurs.
}

\ruleline

% ---------- Solution ----------
\sect{Solution}

\textbf{Step 1: Set equal to zero}  
\explanation{Set the equation equal to zero to find $$h(t)=0$$}
\begin{align*}
-4.9^2+8t+15=0
\end{align*}

\textbf{Step 2: Solve for roots}  
\explanation{plug the equation into the quadratic formula}
\begin{align*}
t= \frac{-b\pm \sqrt{b^2-4ac}} {2a}
\\ a=-4.9
\\ b=8
\\ c=15
\end{align*}

\textbf{Step 3:Simplify}  
\begin{align*}
t= \frac{-8\pm \sqrt{8^2-4(-4.9)(15)}}{2(-4.9)} \approx -0.17 \quad \text {or} \quad 1.802
\end{align*}
We need to use 1.802 because time cannot go backwards.

\textbf{Step 4: Solve for part B}  
\explanation{To find the vertex (maximum), compute.}
\begin{align*}
\Big (\frac{-b}{2a},h(\frac{-b}{2a})\Big)
\\ t= -\frac{8}{2(-4.9)}
\\ t=\frac{8}{9.8}
\\ t\approx 0.816
\end{align*}
% ---------- Final Answer ----------
\sect{\color{redink}Final Answer}
{\color{redink}
The snowball will hit the ground 1.802 seconds after being thrown.

\\ The snowball's maximum height will be reached after 0.816 seconds.
}
